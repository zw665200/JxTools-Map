<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="50dip" />
            <gradient
                android:angle="0"
                android:centerColor="@color/color_cross_line"
                android:centerY="0.75"
                android:endColor="@color/color_cross_line"
                android:startColor="@color/color_cross_line" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="50dip" />
                <gradient
                    android:angle="0"
                    android:centerColor="@color/color_blue"
                    android:centerX="0.75"
                    android:endColor="@color/color_blue"
                    android:startColor="@color/color_blue" />
            </shape>
        </scale>
    </item>


</layer-list>